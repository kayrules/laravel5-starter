{
    "name": "kayrules/laravel5-starter",
    "description": "The Laravel 5 Starter CMS Template with Bootstrap.",
    "keywords": ["framework", "laravel 5", "bootstrap", "cms", "theme", "starter"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Mohd Khairulnizam Md Dahari",
            "email": "me@kayrules.com",
            "homepage":"https://github.com/kayrules/laravel5-starter",
            "role": "developer"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "teepluss/theme": "dev-master",
        "barryvdh/laravel-debugbar": "^2.0",
        "laravelcollective/html": "^5.1"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "chmod -R 777 app/storage",
            "chmod -R 777 bootstrap/cache",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
